{
  "name": "react-app-2",
  "version": "1.0.0",
  "description": "A simple React application with Redux, TypeScript and Server Side Rendering",
  "scripts": {
    "prestart": "run-s build",
    "start": "run-p build:watch start-server",
    "start:prod": "run-s build:prod start-server:prod",
    "start-server": "cross-env NODE_APP_ENV=DEV node src/server/index.js",
    "start-server:prod": "cross-env NODE_APP_ENV=PROD node src/server/index.js",
    "prebuild": "run-s clean",
    "build": "webpack --config webpack/webpack.config.dev.js",
    "build:watch": "webpack --watch --config webpack/webpack.config.dev.js",
    "prebuild:prod": "run-s clean:prod",
    "build:prod": "webpack --config webpack/webpack.config.prod.js",
    "clean": "rimraf ./dist-dev && mkdir dist-dev",
    "clean:prod": "rimraf ./dist-prod && mkdir dist-prod",
    "test": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "pree2e": "run-s build:prod",
    "e2e": "run-p start-server:prod cypress:run",
    "pree2e:open": "run-s build:prod",
    "e2e:open": "run-p start-server:prod cypress:open",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergeypogorelov/react-app-2.git"
  },
  "keywords": [
    "TypeScript",
    "React",
    "Redux",
    "Server Side Rendering"
  ],
  "author": "Sergey Pogorelov <sergey.pogorelov.93@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sergeypogorelov/react-app-2/issues"
  },
  "homepage": "https://github.com/sergeypogorelov/react-app-2#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "bootstrap": "^4.4.1",
    "classnames": "^2.2.6",
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "redux": "^4.0.5",
    "redux-promise-middleware": "^6.1.2"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-redux": "^7.1.9",
    "@types/react-test-renderer": "^16.9.2",
    "@types/redux-mock-store": "^1.0.2",
    "autoprefixer": "^9.7.6",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "cypress": "^4.7.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "precss": "^4.0.0",
    "react-test-renderer": "^16.13.1",
    "redux-mock-store": "^1.5.4",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.1",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.3",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "./jest/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest/mock-file.js",
      "\\.(css|scss|less)$": "<rootDir>/jest/mock-style.js"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/cypress"
    ],
    "collectCoverageFrom": [
      "src/client/**/*.{ts,tsx}"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
