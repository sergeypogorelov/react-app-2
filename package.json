{
  "name": "react-app-2",
  "version": "1.0.0",
  "description": "A simple React application with Redux, TypeScript and Server Side Rendering",
  "scripts": {
    "start": "npm run build && npm run start-server",
    "start-server": "npm config set react-app-2:ENV_NODE_ENV DEV && node src/server/index.js",
    "prebuild": "npm run clean",
    "build": "webpack --config webpack/webpack.config.dev.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf ./build-dev && mkdir build-dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergeypogorelov/react-app-2.git"
  },
  "keywords": [
    "React",
    "TypeScript",
    "Server Side Rendering",
    "Redux"
  ],
  "author": "Sergey Pogorelov <sergey.pogorelov.93@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sergeypogorelov/react-app-2/issues"
  },
  "homepage": "https://github.com/sergeypogorelov/react-app-2#readme",
  "dependencies": {
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "html-webpack-plugin": "^4.3.0",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^3.0.1",
    "ts-loader": "^7.0.3",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
